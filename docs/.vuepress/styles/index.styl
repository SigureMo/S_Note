// 鼠标指针
body
  background-color #dee;
  cursor: url('/cursor/default.cur'), auto;
body
  .header
    .banner
      cursor: url('/cursor/default.cur'), auto;
.container
  aside
    .info-card
      .info-card-body
        cursor: url('/cursor/default.cur'), auto;
a, button, #goTop, .jump, h1, .info-avatar, .post-tag
  cursor: url('/cursor/link.cur'), auto;

// 标题
.header
  .banner
    .container
      h1
        text-shadow 2px 2px 1px #888

// 背景
body
  .header
    background-position: top center !important
  .banner
    height: 400px !important

// 隐藏原有返回顶部按钮
.go-to-top
  display none

// 修复移动端 & Linux PC（该粗细的字体残缺） 中文不显示粗体的问题
strong
  font-weight: bold !important
